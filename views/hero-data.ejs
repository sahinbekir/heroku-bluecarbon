<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Heros Data</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Admin.</p>
  </div>
  <div class="row justify-content-center">

  

    <div class="col-2">
  <form action="/hero-data" enctype="multipart/form-data" method="POST">
  
    <div class="row g-3">
      <div class="col-12">
        <label for="text" class="form-label">Reset to Default</label>
        <input type="text" name="clear_text" id="text" class="form-control" placeholder="clear" required>
      </div>
      <div class="col-12">
        <button style="background-color: red;" type="submit" class="btn btn-primary">Reset</button>
      </div>

    </div>
  
  </form>
  </div></div>
  <div class="row justify-content-center">
    <% if(infoSubmitObj != '') { %>
      <div class="col-4 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
    
    <% if(infoErrorsObj != '') { %>
      <div class="col-4 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  </div>
    <br><br>
</div>

<h1 class="center"><strong><b>Heros Images</b></strong></h1>
<table>
  <tr>
    <th>Num</th>
    <th>Id</th>
    <th>Image</th>
  </tr>
  <% for (var i=0; i<parallax_image.length; i++) { %>
  <tr>
    <td> <b>#<%- i %></b> </td>
    <td><%- parallax_image[i]._id %></td>
    <td><%- parallax_image[i].parallax_image %></td>
  </tr>
  <% } %>
</table>
<br><br>

<div class="row justify-content-center">

  

  <div class="col-4">

    <form action="/hero-data" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        
        <div class="col-12">
          <label for="id" class="form-label">Heros Image ID</label>
          <input type="id" name="parallax_image_id" id="id" class="form-control" value="null" required>
        </div>

        <div class="col-12">
          <label for="image">Image</label>
          <input type="file" class="form-control" name="parallax_image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>

      </div>
    
    </form>
  </div>
</div>
<br><br><br>
<h1 class="center"><strong><b>Heros Text</b></strong></h1>
<table>
  <tr>
    <th>Num</th>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% for (var i=0; i<parallax_text.length; i++) { %>
  <tr>
    <td> <b>#<%- i %></b> </td>
    <td><%- parallax_text[i]._id %></td>
    <td><%- parallax_text[i].parallax_title %></td>
    <td><%- parallax_text[i].parallax_text %></td>
  </tr>
  <% } %>
</table>
<br><br>
<div class="row justify-content-center">
 
  <div class="col-4">


    <form action="/hero-data" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="parallax_text_id" class="form-label">Heros Text ID</label>
          <input type="parallax_text_id" name="parallax_text_id" id="parallax_text_id" class="form-control" value="null" required>
        </div>
        <div class="col-12">
          <label for="text" class="form-label">Title</label>
          <textarea name="parallax_title" id="text" class="form-control" cols="30" rows="4"></textarea>
        </div>
        <div class="col-12">
          <label for="text" class="form-label">Text</label>
          <input type="text" name="parallax_text" id="text" class="form-control" value="Explore" required>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>

      </div>
    
    </form>
  </div>
</div>
<br><br><br>
